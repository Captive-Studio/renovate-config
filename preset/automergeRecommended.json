{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge Recommended packages",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": [
        "core-js",
        "date-fns",
        "ionicons",
        "pinia",
        "vue",
        "vue-router"
      ],
      "matchPackagePrefixes": ["@capacitor/", "@ionic/", "@vue/"]
    }
  ]
}
