{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Expo & React Native core",
      "matchManagers": ["npm"],
      "matchPackagePatterns": [
        "^(@expo|expo)($|[-/])",
        "^(@react|react)($|[-/])",
        "@types/react",
        "jest"
      ],
      "ignoreDeps": [
        "@react-native-community/datetimepicker",
        "@react-native-picker/picker",
        "react",
        "react-dom",
        "react-native",
        "jest",
        "@types/jest"
      ]
    },
    {
      "description": "Met à jour le noyau Expo uniquement quand Expo est mis à jour",
      "matchManagers": ["npm"],
      "matchPackagePatterns": ["^expo$"],
      "groupName": "Expo core (trigger full update)",
      "extends": ["group:allNonMajor"],
      "postUpgradeTasks": {
        "commands": [
          "npm install",
          "npx expo install --fix"
        ],
        "fileFilters": ["package.json", "package-lock.json"]
      }
    }
  ]
}
