{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "groupName": "Expo & React Native core",
      "matchManagers": ["npm"],
      "matchPackagePatterns": [
        "^(@expo|expo)($|[-/])",
        "^react-native($|[-/])",
        "^react($|[-/])"
      ],
      "automerge": false
    }
  ]
}
