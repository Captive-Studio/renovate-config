{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge Ruby packages",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["puma"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "matchPackageNames": ["pg", "rails", "redis", "sidekiq"]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": ["foreman"]
    }
  ]
}
