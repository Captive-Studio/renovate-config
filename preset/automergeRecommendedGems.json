{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge Ruby packages",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchManagers": ["bundler"],
      "automerge": true,
      "matchPackageNames": [
        "aws-sdk-s3",
        "capybara",
        "cuprite",
        "debug",
        "foreman",
        "pg",
        "puma",
        "rails",
        "redis",
        "rubocop",
        "shoulda-matchers",
        "sidekiq",
        "tzinfo-data"
      ],
      "matchPackagePatterns": ["^rubocop-", "^sentry-"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "matchManagers": ["bundler"]
    }
  ]
}
