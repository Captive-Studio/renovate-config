{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge Ruby packages",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch"],
      "matchManagers": ["bundler"],
      "automerge": true,
      "matchPackageNames": [
        "capybara",
        "cuprite",
        "foreman",
        "pg",
        "puma",
        "rails",
        "redis",
        "shoulda-matchers",
        "sidekiq",
        "tzinfo-data"
      ]
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "matchManagers": ["bundler"]
    }
  ]
}
