{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge Ruby packages",
  "packageRules": [
    {
      "matchUpdateTypes": ["minor"],
      "automerge": true,
      "matchManagers": ["bundler"],
      "matchPackageNames": ["*", "!rails"]
    },
    {
      "matchUpdateTypes": ["patch"],
      "automerge": true,
      "matchManagers": ["bundler"]
    }
  ]
}
