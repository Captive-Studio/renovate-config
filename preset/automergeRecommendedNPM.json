{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Automerge Trusted packages",
  "packageRules": [
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "matchSourceUrls": [
        "https://github.com/Captive-Studio/es-project-config"
      ],
      "automerge": true
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackageNames": [
        "core-js",
        "date-fns",
        "esbuild",
        "ionicons",
        "pinia",
        "sass",
        "vue",
        "cypress",
        "vue-router",
        "tailwindcss",
        "@ionic/lab",
        "@vue/test-utils"
      ]
    },
    {
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true,
      "matchPackagePrefixes": [
        "@capacitor/",
        "@sentry/",
        "@rails/",
        "@hotwired/"
      ]
    },
    {
      "matchUpdateTypes": ["patch"],
      "matchPackageNames": ["axios"],
      "matchPackagePrefixes": ["@ionic/"],
      "automerge": true
    }
  ]
}
