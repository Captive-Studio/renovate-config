{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Add rails dependencies to Ruby on Rails",
  "packageRules": [
    {
      "groupName": "Ruby on Rails packages",
      "matchPackageNames": ["rails-i18n", "rspec-rails", "bullet"]
    },
    {
      "matchManagers": ["bundler", "npm"],
      "matchPackagePrefixes": ["@rails/"],
      "matchPackageNames": ["rails"],
      "matchUpdateTypes": ["major"],
      "addLabels": ["major-upgrade", "manual-review"],
      "prBodyNotes": [
        "Fermée automatiquement : montée majeure de Rails nécessitant un traitement manuel."
      ],
      "prCreation": "not-pending",
      "automerge": false,
      "autoclose": true
    }
  ]
}
